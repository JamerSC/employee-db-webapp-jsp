<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource 
        name="jdbc/my_employee_db"
        auth="Container"
        type="javax.sql.DataSource"
        maxTotal="20"
        maxIdle="5"
        maxWaitMillis="10000"
        username="employee"
        password="employee"
        driverClassName="com.mysql.cj.jdbc.Driver"
        url="jdbc:mysql://localhost:3306/my_employee_db?useSSL=false&amp;serverTimezone=UTC"
        connectionProperties="useUnicode=true;characterEncoding=UTF-8"
    />
</Context>
